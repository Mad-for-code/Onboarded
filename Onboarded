<body>
    <div class="container">
        <div class="form-group">
            <label for="psid">Enter PSID:</label>
            <input type="text" id="psid">
        </div>
        <button onclick="fetchEmployee()">Fetch Employee Info</button>

        <div class="employee-info" id="employee-info"></div>

        <div class="buttons" id="action-buttons" style="display: none;">
            <button onclick="approveRequest()">Approve</button>
            <button class="decline" onclick="declineRequest()">Decline</button>
        </div>
    </div>

    <script>
        async function fetchEmployee() {
            const psid = document.getElementById('psid').value;
            const employeeInfoDiv = document.getElementById('employee-info');
            const actionButtonsDiv = document.getElementById('action-buttons');

            if (!psid) {
                employeeInfoDiv.innerHTML = "<p>Please enter a PSID.</p>";
                actionButtonsDiv.style.display = "none";
                return;
            }

            try {
                const response = await fetch(`/api/employees/${psid}`);
                if (response.ok) {
                    const employee = await response.json();
                    employeeInfoDiv.innerHTML = `
                        <p><strong>PSID:</strong> ${employee.psid}</p>
                        <p><strong>Name:</strong> ${employee.name}</p>
                        <p><strong>Email:</strong> ${employee.email}</p>
                        <p><strong>Department:</strong> ${employee.department}</p>
                    `;
                    actionButtonsDiv.style.display = "flex";
                } else {
                    employeeInfoDiv.innerHTML = "<p>Employee not found.</p>";
                    actionButtonsDiv.style.display = "none";
                }
            } catch (error) {
                console.error('Error fetching employee:', error);
                employeeInfoDiv.innerHTML = "<p>There was an error fetching the employee information.</p>";
                actionButtonsDiv.style.display = "none";
            }
        }

        function approveRequest() {
            alert('Request Approved!');
        }

        function declineRequest() {
            alert('Request Declined!');
        }
    </script>
</body>
</html>
