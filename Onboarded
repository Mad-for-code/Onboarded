<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Nomination</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        .employee-info {
            margin: 20px 0;
        }
        .employee-info p {
            font-size: 18px;
            color: #555;
        }
        .buttons {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
        }
        .buttons button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .approve {
            background-color: #4CAF50;
            color: white;
        }
        .decline {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Employee Nomination</h1>
        <div class="employee-info" id="employee-info">
            <p><strong>Name:</strong> <span id="name"></span></p>
            <p><strong>PSID:</strong> <span id="psid"></span></p>
            <p><strong>Email:</strong> <span id="email"></span></p>
        </div>
        <div class="buttons">
            <button class="approve" onclick="handleAction('approve')">Approve</button>
            <button class="decline" onclick="handleAction('decline')">Decline</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const randomPsid = Math.floor(Math.random() * 1000) + 1;  // Generate a random PSID
            fetchEmployeeData(randomPsid);
        });

        function fetchEmployeeData(psid) {
            // Simulated fetch function with dummy data
            const dummyData = {
                name: "John Doe",
                psid: psid,
                email: "johndoe@example.com"
            };

            // Display the fetched data
            document.getElementById('name').innerText = dummyData.name;
            document.getElementById('psid').innerText = dummyData.psid;
            document.getElementById('email').innerText = dummyData.email;
        }

        function handleAction(action) {
            const psid = document.getElementById('psid').innerText;
            if (action === 'approve') {
                alert(`Nomination for PSID ${psid} approved.`);
            } else if (action === 'decline') {
                alert(`Nomination for PSID ${psid} declined.`);
            }
        }
    </script>
</body>
</html>
